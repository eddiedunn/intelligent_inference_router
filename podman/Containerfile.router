FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends sqlite3 && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml ./
RUN pip install --no-cache-dir .

COPY src/ ./src/
COPY config/ ./config/
RUN mkdir -p ./persistent-data

ARG USER_ID=1001
RUN useradd -m -u $USER_ID appuser && chown -R $USER_ID:$USER_ID /app
USER appuser

EXPOSE 8000
CMD ["uvicorn", "iir.app:create_app", "--factory", "--host", "0.0.0.0", "--port", "8000", "--log-level", "info"]
